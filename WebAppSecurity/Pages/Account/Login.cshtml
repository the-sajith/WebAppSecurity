@page

@model WebAppSecurity.Pages.Account.LoginModel
@{
	
}


<div class="text-center">
	<h1 class="display-4">Welcome to Login Page</h1>

</div>

<div class="container" style="margin: 30px auto">
	<div class="container-fluid">
		<div class="card" style="height:50%; width:50%; margin: 30px auto; padding: 10px 0px; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif ">
			<div class="card-body">
				<form method="post">
					<div class="text-danger" asp-validation-summary="ModelOnly"></div>
					<div class="form-group row">
					<div class="col-2">
						<label asp-for="NewLoginRequest.UserName"></label>
						</div>
					<div class="col-5">
						<input type="text" asp-for="NewLoginRequest.UserName" class="form-control" />
					</div>
						<div class="col-5">
							<span class="text-danger" asp-validation-for="NewLoginRequest.UserName"></span>
							</div>
				</div>
				<br />
				<div class="form-group row">
					<div class="col-2">
						<label>Password</label>
					</div>
					<div class="col-5">
						<input type="password" asp-for="NewLoginRequest.Password"  class="form-control" />
					</div>
					<div class="col-5">	<span class="text-danger" asp-validation-for="NewLoginRequest.Password"></span> </div>
				</div>
				<br />
					<div class="form-check row mb-2">
						<div class="col-4">
							<input type="checkbox" class="form-check-input" asp-for="NewLoginRequest.RememberMe"/>
							<label class="form-check-label">Remember Me</label>
						</div>
						<div class="col-5">
							
						</div>
						
					</div>
					<br />
				<div class="form-group row">
						<div class="d-grid gap-2">
							<button type="submit" class="btn btn-outline-dark">Login</button>
					</div>


				</div>
				</form>
			</div>
		</div>
	</div>
</div>

